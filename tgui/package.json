{
  "private": true,
  "name": "tgui-workspace",
  "version": "4.3.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tgui:build": "webpack",
    "tgui:analyze": "webpack --analyze",
    "tgui:dev": "node --experimental-modules packages/tgui-dev-server/index.js",
    "tgui:lint": "eslint packages --ext .js,.cjs,.ts,.tsx",
    "tgui:sonar": "eslint packages --ext .js,.cjs,.ts,.tsx -c .eslintrc-sonar.yml",
    "tgui:tsc": "tsc",
    "tgui:test": "jest --watch",
    "tgui:test-simple": "CI=true jest --color",
    "tgui:test-ci": "CI=true jest --color --collect-coverage",
    "tgui:bench": "webpack --env TGUI_BENCH=1 && node packages/tgui-bench/index.js"
  },
  "dependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/plugin-transform-jscript": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/jsdom": "^16.2.13",
    "@types/node": "^16.11.12",
    "@types/webpack": "^5.28.0",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.4.4",
    "babel-loader": "^8.2.3",
    "babel-plugin-inferno": "^6.3.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "common": "workspace:*",
    "css-loader": "^5.2.7",
    "eslint": "^7.32.0",
    "eslint-plugin-radar": "^0.2.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-unused-imports": "^1.1.5",
    "file-loader": "^6.2.0",
    "inferno": "^7.4.11",
    "jest": "^27.4.4",
    "jest-circus": "^27.4.4",
    "jsdom": "^16.7.0",
    "mini-css-extract-plugin": "^1.6.2",
    "sass": "^1.44.0",
    "sass-loader": "^11.1.1",
    "style-loader": "^2.0.0",
    "terser-webpack-plugin": "^5.2.5",
    "typescript": "~4.3.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1"
  },
  "packageManager": "yarn@3.1.1"
}
