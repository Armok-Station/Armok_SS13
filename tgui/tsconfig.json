{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": false,
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext",
      "ScriptHost"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": {
      "common/*": [
        "packages/common/*"
      ],
      "tgui/*": [
        "packages/tgui/*"
      ],
      "tgui-dev-server": [
        "packages/tgui-dev-server"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "target": "ES5",
  },
  "include": [
    "./*.d.ts",
    "./packages"
  ]
}
