<ui-display title='Financial Console'>
	<ui-section label='finances'>
		{{#if !data.authorized}}
			<ui-section label='unauthorized'>
				<span>'You are not authorized to use this console!'</span>
			</ui-section>
		{{else}}
			{{#each data.shares}}
				<ui-section label='budget'>
					<span>{{name}}</span>
					<ui-button action={{department}}>{{share}}</ui-button>
				</ui-section>
			{{/each}}
		{{/if}}
	</ui-section>
</ui-display>
